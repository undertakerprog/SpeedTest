<Window x:Class="Desktop.Views.AppBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AppBarWindow" Height="50" Width="250"
        WindowStyle="None" AllowsTransparency="True"
        Background="Black" Opacity="0.8" Topmost="True"
        MouseDown="OnMouseDown" Closing="Window_Closing">

    <Grid>
        <Label Name="SpeedLabel" Foreground="White" FontSize="16"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
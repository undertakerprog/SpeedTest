<Page x:Class="Desktop.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainPage">
    <Grid>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Margin="10">
            <RadioButton x:Name="FastSpeedTestRadioButton"
                         Content="Fast Speedtest" 
                         GroupName="SpeedTestType" 
                         IsChecked="True" 
                         Margin="0,0,10,0" />
            <RadioButton x:Name="SpeedTestRadioButton"
                         Content="Speedtest" 
                         GroupName="SpeedTestType" />
        </StackPanel>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="StartButton"
                    Content="Start" 
                    Width="100" 
                    Height="100" 
                    Background="LightBlue" 
                    Foreground="Black" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    BorderBrush="DarkBlue" 
                    BorderThickness="2" 
                    Style="{StaticResource RoundButtonStyle}" 
                    Click="StartButton_Click" />

            <ComboBox x:Name="ServersComboBox"
                      Width="150"
                      Height="40"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                      Margin="-170,0,0,0"
                      Visibility="Collapsed">
            </ComboBox>
        </Grid>

        <TextBlock x:Name="SpeedResultText"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   FontWeight="Bold"
                   Visibility="Collapsed" />
    </Grid>
</Page>